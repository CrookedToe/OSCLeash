<UserControl x:Class="VRCOSC.Modules.OSCLeash.UI.LeashModuleSettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d">
    
    <StackPanel Margin="10">
        <!-- Core Settings -->
        <GroupBox Header="Core Settings" Margin="0,0,0,10" Foreground="{DynamicResource CForeground1}">
            <StackPanel Margin="5">
                <Label Content="Leash Variable Name" Foreground="{DynamicResource CForeground2}"/>
                <TextBox Text="{Binding LeashVariable, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Base name for leash parameters (e.g., 'Leash' or 'Leash_North')"
                         Foreground="{DynamicResource CForeground1}"/>
                
                <Label Content="Leash Direction" Foreground="{DynamicResource CForeground2}"/>
                <ComboBox ItemsSource="{Binding DirectionOptions}"
                          SelectedItem="{Binding LeashDirection}"
                          ToolTip="Direction the leash faces relative to avatar"
                          Foreground="Black"/>
            </StackPanel>
        </GroupBox>

        <!-- Movement Settings -->
        <GroupBox Header="Movement Settings" Margin="0,0,0,10" Foreground="{DynamicResource CForeground1}">
            <StackPanel Margin="5">
                <Label Content="Walk Deadzone" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding WalkDeadzone}"
                        Minimum="0" Maximum="1" 
                        ToolTip="Minimum stretch required to start walking (0-1)"
                        IsSnapToTickEnabled="True" TickFrequency="0.05"/>
                
                <Label Content="Run Deadzone" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding RunDeadzone}"
                        Minimum="0" Maximum="1"
                        ToolTip="Minimum stretch required to start running (0-1)"
                        IsSnapToTickEnabled="True" TickFrequency="0.05"/>
                
                <Label Content="Strength Multiplier" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding StrengthMultiplier}"
                        Minimum="0" Maximum="2"
                        ToolTip="Multiplier for movement speed"
                        IsSnapToTickEnabled="True" TickFrequency="0.1"/>
                
                <CheckBox Content="Enable Safety Limits" 
                          IsChecked="{Binding EnableSafetyLimits}"
                          Margin="0,5"
                          ToolTip="Limit maximum movement speed"
                          Foreground="{DynamicResource CForeground2}"/>
                
                <Label Content="Max Velocity" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding MaxVelocity}"
                        Minimum="0" Maximum="2"
                        ToolTip="Maximum movement speed when safety limits are enabled"
                        IsSnapToTickEnabled="True" TickFrequency="0.1"/>
            </StackPanel>
        </GroupBox>

        <!-- Turning Settings -->
        <GroupBox Header="Turning Settings" Margin="0,0,0,10" Foreground="{DynamicResource CForeground1}">
            <StackPanel Margin="5">
                <CheckBox Content="Enable Turning" 
                          IsChecked="{Binding TurningEnabled}"
                          Margin="0,5"
                          ToolTip="Allow the leash to control turning"
                          Foreground="{DynamicResource CForeground2}"/>
                
                <Label Content="Turning Multiplier" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding TurningMultiplier}"
                        Minimum="0" Maximum="2"
                        ToolTip="Multiplier for turning speed"
                        IsSnapToTickEnabled="True" TickFrequency="0.1"/>
                
                <Label Content="Turning Deadzone" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding TurningDeadzone}"
                        Minimum="0" Maximum="1"
                        ToolTip="Minimum stretch required to start turning (0-1)"
                        IsSnapToTickEnabled="True" TickFrequency="0.05"/>
                
                <Label Content="Smooth Turning Speed" Foreground="{DynamicResource CForeground2}"/>
                <Slider Value="{Binding SmoothTurningSpeed}"
                        Minimum="0" Maximum="2"
                        ToolTip="Speed of turn angle interpolation"
                        IsSnapToTickEnabled="True" TickFrequency="0.1"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl> 